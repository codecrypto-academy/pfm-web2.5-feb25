{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // o elim√≠nalo si no lo necesitas.
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Cambiado de "bundler" a "node".
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Cambiado de "preserve" a "react-jsx" para React 17+.
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
